<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>

<% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %>　　error</li>
            <% end %>
        </ul>
    </div>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>